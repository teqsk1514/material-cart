<div class="row horizontal-align">
  <div class="col-md-8 col-sm-12 col-lg-6">
    <div class="card">
      <div class="card-body">
        <h1 style="">LOG IN </h1>
        {{#if hasError}}
        <div class="alert alert-danger">
          {{# each messages}}
          <p>{{this}}</p>
          {{/each}}
        </div>
        {{/if}}

        <form action="/user/signin" method="post">
          <div class="form-group">
            <label for="email" class="bmd-label-floating">Email</label>
            <input type="text" id="email" name="email" class="form-control">
          </div>

          <div class="form-group">
            <label for="password" class="bmd-label-floating">Password</label>
            <input type="password" id="password" name="password" class="form-control">
          </div>
          {{!-- the token will submittd with the form itself --}}
          <input type="hidden" name="_csrf" value="{{ csrfToken}}">
          <br>
          <button type="submit" class="btn btn-raised btn-success">Sign In</button>
        </form>
        <br>
        <a href="/user/signup"><button class="btn btn-raised btn-secondary">New User?</button></a>
      </div>
    </div>
  </div>
</div>